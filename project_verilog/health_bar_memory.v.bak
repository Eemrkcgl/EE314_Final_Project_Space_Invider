module health_bar_memory (
    input clk,
    input [3:0] health,
    input [7:0] address,
    output reg pixel_data
);

    reg h_0  [0:127];
    reg h_1  [0:127];
    reg h_2  [0:127];
    reg h_3  [0:127];
    reg h_4  [0:127];
    reg h_5  [0:127];
    reg h_6  [0:127];
    reg h_7  [0:127];
    reg h_8  [0:127];
    reg h_9  [0:127];
    reg h_10 [0:127];
    reg h_11 [0:127];
    reg h_12 [0:127];
    reg h_13 [0:127];
    reg h_14 [0:127];
    reg h_15 [0:127];
	 
    initial begin
        $readmemb("./health_bar_images/h_0.txt",  h_0);
        $readmemb("./health_bar_images/h_1.txt",  h_1);
        $readmemb("./health_bar_images/h_2.txt",  h_2);
        $readmemb("./health_bar_images/h_3.txt",  h_3);
        $readmemb("./health_bar_images/h_4.txt",  h_4);
        $readmemb("./health_bar_images/h_5.txt",  h_5);
        $readmemb("./health_bar_images/h_6.txt",  h_6);
        $readmemb("./health_bar_images/h_7.txt",  h_7);
        $readmemb("./health_bar_images/h_8.txt",  h_8);
        $readmemb("./health_bar_images/h_9.txt",  h_9);
        $readmemb("./health_bar_images/h_10.txt", h_10);
        $readmemb("./health_bar_images/h_11.txt", h_11);
        $readmemb("./health_bar_images/h_12.txt", h_12);
        $readmemb("./health_bar_images/h_13.txt", h_13);
        $readmemb("./health_bar_images/h_14.txt", h_14);
        $readmemb("./health_bar_images/h_15.txt", h_15);	  
    end

    always @(posedge clk) begin
        case(ss_angle_state)
            0:  pixel_data <=  h_0 [address];
            1:  pixel_data <=  h_1 [address];
            2:  pixel_data <=  h_2 [address];
            3:  pixel_data <=  h_3 [address];
            4:  pixel_data <=  h_4 [address];
            5:  pixel_data <=  h_5 [address];
            6:  pixel_data <=  h_6 [address];
            7:  pixel_data <=  h_7 [address];
            8:  pixel_data <=  h_8 [address];
            9:  pixel_data <=  h_9 [address];
            10: pixel_data <=  h_10[address];
            11: pixel_data <=  h_11[address];
            12: pixel_data <=  h_12[address];
            13: pixel_data <=  h_13[address];
            14: pixel_data <=  h_14[address];
            15: pixel_data <=  h_15[address];
        endcase
    end
endmodule
